<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8sp"
    tools:context=".activities.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <Button
            android:id="@+id/button_sensor_configuration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sensor configuration" />

        <Button
            android:id="@+id/button_log_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Log Location" />

        <Button
            android:id="@+id/button_graph_only_norm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Graph only norm" />

        <Button
            android:id="@+id/button_graph_all"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Graph all" />

        <Button
            android:id="@+id/button_clear_events"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Clear events" />

        <Button
            android:id="@+id/button_sign_in"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sign in" />

        <Button
            android:id="@+id/button_start_service"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Start Service" />

        <Button
            android:id="@+id/button_stop_service"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Stop Service" />

        <Button
            android:id="@+id/button_share"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Share" />

    </LinearLayout>

</ScrollView>